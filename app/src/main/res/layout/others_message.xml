<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_marginbox2"
        android:layout_width="12dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/tv_nick2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/tv_marginbox2"
        android:layout_toRightOf="@+id/tv_marginbox2"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_msgbox2"
        android:layout_width="126dp"
        android:layout_height="69dp"
        android:layout_below="@+id/tv_nick2"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/tv_marginbox2"
        android:layout_toRightOf="@+id/tv_marginbox2"
        android:background="#C2E39D"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_msgbox2"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/tv_msgbox2"
        android:layout_toRightOf="@+id/tv_msgbox2"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_time02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_msgbox2"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="43dp"
        android:layout_toEndOf="@+id/tv_msgbox2"
        android:layout_toRightOf="@+id/tv_msgbox2"
        android:text="TextView" />
</RelativeLayout>